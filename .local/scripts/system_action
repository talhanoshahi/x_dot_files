#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸ–¥ï¸ display off\nğŸšª logout\nğŸ’¤ sleep\nğŸ˜ reboot\nğŸ¤ shutdown" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	'ğŸ–¥ï¸ display off') xset dpms force off ;;
	'ğŸšª logout') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ’¤ sleep') slock $ctl suspend ;;
	'ğŸ˜ reboot') $ctl reboot ;;
	'ğŸ¤ shutdown') $ctl poweroff ;;
	*) exit 1 ;;
esac
